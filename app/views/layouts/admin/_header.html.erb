<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo"), admin_root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t("header.books"), admin_books_path %></li>
          <li><%= link_to t("header.users"), "#" %></li>
          <li><%= link_to t("admin_method.add_book"), new_admin_book_path,
            class: "btn btn-md btn-link" %></li>
          <li><%= link_to t("admin_method.manage_category"), admin_categories_path,
            class: "btn btn-md btn-link" %></li>
          <li><%= link_to t("admin_method.manage_request"), admin_requests_path,
            class: "btn btn-md btn-link" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("login.profile"), user_path(current_user) %></li>
              <li>
                <%= link_to t("login.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
