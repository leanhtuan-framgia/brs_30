<% provide :title, @book.title %>
<div class="book thumbnail">
  <div class="row abox">
    <div class="col-md-5 col-md-offset-1 img-responsive product_img">
      <%= image_tag @book.picture, size: Settings.picture_size,
        class: "img-responsive img-thumbnail product-img" %>
    </div>

    <div class="col-md-6">
      <div class="row title text-center">
        <h1><b><%= @book.title %></b></h1>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-ofset-2">
          <h4>
            <%= t "book.category" %> &nbsp
            <b><%= @book.category.name %><b>
          </h4>
          <h4>
            <%= t "book.author" %> &nbsp
            <b><%= @book.author %></b>
          </h4>
          <h4>
            <%= t "book.publish_date" %> &nbsp
            <b><%= @book.publish_date %></b>
          </h4>
          <h4>
            <%= t "book.number_page" %> &nbsp
            <b><%= @book.number_of_page %></b>
          </h4>
          <h4>
            <%= link_to t("admin_method.edit_book"),
              edit_admin_book_path %>
            <%= link_to t("admin_method.delete_book"), [:admin, @book],
              method: :delete, data: {confirm: t("confirm.delete_book")} %>
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>
