<%= form_for [:admin, @category] do |f| %>
  <p>
    <%= render "shared/error_messages", object: @category %>
    <%= f.label :name, class: "col-md-4" %>
    <%= f.text_field :name, class: "col-md-8" %>

    <%= f.label :description, class: "col-md-4" %>
    <%= f.text_area :description, class: "col-md-8" %>
  </p>
  <p>
    <%= f.fields_for :books do |builder| %>
      <%= render "book_fields", f: builder %>
    <% end %>
  </p>
  <%= link_to_add_fields t("admin_method.add_book"), f, :books %>
  <p><%= f.submit t("btn.submit"),
    class: "btn btn-primary pull-right" %></p>
<% end %>
